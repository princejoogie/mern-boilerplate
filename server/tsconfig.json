{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "strict": true
  },
  "include": ["index.d.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
